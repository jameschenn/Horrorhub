extends layout.pug
block content

    h1= title
    each monster in pokemon
        a(class="card-container" href=`/pokemons/${monster.id}`)
            div(class="card grow")
                img(src=monster.image)
                div(class="card-text")
                    span(style="font-weight:bold; font-size:20px; text-transform:uppercase")= monster.name
                    p= monster.description
                    p= monster.type


    li: a(href="/pokemons?page=1") Page 1
    li: a(href="/pokemons?page=2") Page 2
    li: a(href="/pokemons?page=3") Page 3
    li: a(href="/pokemons?page=4") Page 4
    li: a(href="/pokemons?page=5") Page 5
    li: a(href="/pokemons?page=6") Page 6
