extends layout.pug
block content

    h1(style="font-weight:bold; font-size:40px; text-transform:uppercase; text-align:center")= title
    each monster in pokemon
        a(class="card-container" href=`/pokemons/${monster.id}`)
            div(class="card grow")
                img(src=monster.image)
                div(class="card-text")
                    span(style="font-weight:bold; font-size:20px; text-transform:uppercase; text-align:center")= monster.name
                    p= monster.description
                    p= monster.type

    div(class="page-links")
        li: a(href="/pokemons?page=1" style="text-decoration:none") Page 1
        li: a(href="/pokemons?page=2" style="text-decoration:none") Page 2
        li: a(href="/pokemons?page=3" style="text-decoration:none") Page 3
        li: a(href="/pokemons?page=4" style="text-decoration:none") Page 4
        li: a(href="/pokemons?page=5" style="text-decoration:none") Page 5
        li: a(href="/pokemons?page=6" style="text-decoration:none") Page 6
