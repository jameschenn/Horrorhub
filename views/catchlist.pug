extends layout.pug


block content
    h2(style="font-weight:bold; font-size:40px; text-transform:uppercase; text-align:center")= title
        each pokemon in pokemonList
            div(class="card-container" id=`${pokemon.id}`)
                div(class=`card grow ${pokemon.id}`)
                    img(src=pokemon.image)
                    div(class="card-text")
                    span(style="font-weight:bold; font-size:20px; text-transform:uppercase; text-align: center")= pokemon.name
                    p= pokemon.description
                    p= pokemon.type
                    form(action=`/catchlists/${trainer.id}/${catchlistId}` method='get')
                        button(type="submit" id=`${pokemon.id}-${catchlistId}-${trainer.id}` class='deleteBtn') Remove
