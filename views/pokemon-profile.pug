extends layout.pug
block content
    h2= title
    div(class="card-container")
            div(class="card grow")
                img(src=pokemon.image)
                div(class="card-text")
                    span(style="font-weight:bold; font-size:20px; text-transform:uppercase")= pokemon.name
                    p= pokemon.description
                    p= pokemon.type
    if locals.authenticated
        form(action='/catchlists/:trainerId(\\d+)/:catchlistId(\\d+)' method='post')
            select(class='drop-down')
                option(value="Want To Catch") Want To Catch
                option(value="Trying To Catch") Trying To Catch
                option(value="Have Caught") Have Caught
            button(type='Submit' class='grow') Confirm
